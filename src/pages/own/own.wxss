/* src/pages/own/own.wxss */
page{
  background-color:#f5f8fa;
}
.own-photo{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
}
.own_bg{
  display: block;
  width: 100%;
  z-index: 1;
  top: 0;
}
.photo_wrap{
  position:absolute;
  top: 15%;
  width: 90px;
  height:90px;
  border-radius: 50%;
  overflow: hidden;
    z-index: 2;
}
 .photo_wrap image{
  width: 100%;
} 
.own_name{
  position: absolute;
  width: 100%;
  text-align: center;
  bottom:23%;
  z-index: 2;
  font-size: 15px;
  color: #2b2c2c;
}
.orderList{
  margin-top: 10px;
  background-color: #fff;
}
.orderList{
  width: 100%;
}
.orderHeader{
  width: 96%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.orderHeader>view{
  flex: 1;
  padding: .5rem 0;
}
.orderHeader>view:nth-child(1){
  font-size: .9rem;
  color: #2b2c2c;
}
.orderHeader>view:nth-child(2){
  font-size: .8rem;
  text-align: right;
  color: #9a9a9a;
}
.orderHeader>view:nth-child(2)::after{
  content: '';
  height: 2px;
}